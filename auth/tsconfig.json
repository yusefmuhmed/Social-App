{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "rootDir": "./",
        "outDir": "./build",
        "baseUrl": ".",
        "forceConsistentCasingInFileNames": true,
        "strict": true
    }
}